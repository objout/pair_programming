
.dice-container {
  position: relative;
  width: 50px;
  height: 50px;
  margin: 5px;
}
.dice-image {
  width: 100%;
  height: 100%;
}
.locked {
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 20px;
}


.container {
  align-items: center;
  background-color: #f0f0f0;
  display: flex;
  flex-direction: column;
  padding: 20px;
}
.title {
  font-size: 24px;
  margin-bottom: 20px;
}
.game-board {
  background-color: #fff;
  height: 300px;
  margin-bottom: 20px;
  width: 100%;
}
.game-info {
  margin-bottom: 20px;
}
.btn {
  background-color: #4CAF50;
  border-radius: 5px;
  border: none;
  color: white;
  margin: 10px;
  padding: 10px 20px;
}
.game-board {
  display: flex;
  justify-content: space-between;
}
.player-dices.left {
  margin-right: 10px;
}
.player-dices.right {
  margin-left: 10px;
}

