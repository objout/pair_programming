
.content-background{
	width: 100%;
	position: relative;
}
.content-background{
	height: 100vh;
}
.backgroun-img{
	position: absolute;
	top: 0;
	right: 0;
	width: 100%;
	height: 100%;
}
.container {
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 20px;
	background-color: #f0f0f0;
	/* background-color: transparent; */
	width: 100%;
	box-sizing: border-box;
}
.title {
	font-size: 24px;
	margin-bottom: 20px;
}
.game-board {
	width: 100%;
	height: 300px;
	background-color: #fff;
	margin-bottom: 20px;
	display: flex;
}
.game-info {
	margin-bottom: 20px;
}
.btn {
	margin: 10px;
	padding: 10px 20px;
	background-color: #4CAF50;
	color: white;
	border: none;
	border-radius: 5px;
}
.player-dices.left {
	width: 50%;
}
.player-dices.right {
	width: 50%;
	display: flex;
	flex-direction: column;
	justify-content: flex-end;
	align-items: flex-end;
}

